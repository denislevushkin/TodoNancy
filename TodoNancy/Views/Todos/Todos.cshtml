@using System.Linq
@using Nancy.ViewEngines.Razor;
@inherits NancyRazorViewBase<TodoNancy.Model.Todo[]>

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>Todos</title>
</head>
<body>
<a href="/authentication/redirect/twitter">Login with Twitter</a>
<h1>All todos</h1>
<table id="Table1">
    <tr>
        <th>Title</th>
        <th>Order</th>
        <th>Completed</th>
    </tr>
    <tr>Todos.Count=@Model.Count()</tr>
    @foreach (var todo in @Model)
    {
        <tr id="@todo.Id">
            <td>@todo.Title</td>
            <td>@todo.Order</td>
            <td>@todo.Completed</td>
        </tr>
    }
</table>
<h1>Add todo</h1>
<form action="/todos/" method="post">
    <input type="text" name="Title" value="Title"/>
    <input type="number" name="Order" value="0"/>
    <input type="checkbox" name="Completed"/>
    <input type="submit" value="add"/>
</form>
</body>
</html>